{{> breadcrumbs level1_txt='Departments' level1_url='/departments/' currLvl_txt='Edit Department' }}
<h1 class="title">Edit Department</h1>
<div id="errDiv" class="notification is-danger" style="display: none;"><span id="errorText"></span></div>
<div id="informDiv" class="notification is-primary" style="display: none;"><span id="informText"></span> <a
    id="informLink" href="#">View Department</a></div>

<form name="newDept" onsubmit="return false;">
  <label for="dname">Id:</label><br>
  <input class="input" type="text" id="deptId" name="deptId" disabled="1" value="{{this.department.id}}"><br>
  <label for="dname">Department Name:</label><br>
  <input class="input" type="text" id="dname" name="dname" value="{{this.department.name}}"><br>
  <label for="dname">Deleted?</label><br>
  <input class="input" type="text" id="deleted" name="deleted" value="{{this.department.deleted}}"><br><br>
  <input class="button is-success" type="button" value="Edit" onclick="editModalConfirm()">
  <a class="button" href="/departments/">Cancel</a>
</form>
<hr>
<h3 class="subtitle">Additional Record Details</h3>
Created: {{this.department.createdAt}}<br>
Last Modified: {{this.department.updatedAt}}

<div id="editConfirmModal" class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Update Department?</p>
      <button class="delete" aria-label="close" onclick="cancelEditModal()"></button>
    </header>
    <section class="modal-card-body">
      <p>Updating this record will overwrite the department, and cannot be reversed. If in doubt, Now is the time to go
        back and check your work.</p>
    </section>
    <footer class="modal-card-foot">
      <button class="button is-warning" onclick="updateDepartment()">Save changes</button>
      <button class="button" onclick="cancelEditModal()">Cancel</button>
    </footer>
  </div>
</div>