{{> breadcrumbs level1_txt='Timecards' level1_url='/timecards/' currLvl_txt=this.timecard.title }}

<nav class="level">
  <!-- Left side -->
  <div class="level-left">
    <div class="level-item">
      <h1 class="title">Timecard {{this.timecard.id}}: {{this.timecard.title}}</h1>
    </div>
  </div>

  <!-- Right side -->
  <div class="level-right">
    <p class="level-item"><a class="button" href="./edit">Edit</a></p>
    <p class="level-item"><a class="button is-danger" href="./delete">Delete</a></p>
  </div>
</nav>

<div class="columns">
  <div class="column">
    <div class="box">
      <h3 class="subtitle">Details</h3>
    timecardID: <kbd>{{this.timecard.id}}</kbd><br>

Title: {{this.timecard.title}}<br>
Date: {{this.timecard.date}}<br>
Hours: {{this.timecard.hours}}<br>
<!-- TODO: Refer -->
Individual: {{this.timecard.individual_id}} <a href="/people/view/{{this.timecard.individual_id}}">(View)</a><br>
</div>
  </div>
  <div class="column">
    <div class="box">
      <h3 class="subtitle">Notes</h3>
    {{this.timecard.notes}}<br>
  </div>
    </div>
</div>

<h3 class="subtitle">Additional Record Details</h3>
Created: {{this.timecard.createdAt}}<br>
Modified: {{this.timecard.updatedAt}}

<hr> 
<a href="/timecards/">Back</a>