{{> breadcrumbs currLvl_txt='People' }}

<nav class="level">
  <!-- Left side -->
  <div class="level-left">
    <div class="level-item">
      <h1 class="title">People</h1>
    </div>
  </div>

  <!-- Right side -->
  <div class="level-right">
    <p class="level-item"><a class="button is-success" href="./new">New</a></p>
  </div>
</nav>
<table class="table is-fullwidth is-striped">
    <thead>
        <tr>
            {{!-- <th></th> --}}
            <th>First</th>
            <th>Last</th>
            <th>Nickname</th>
            <th>Email</th>
            <th>Department</th>
            <th>Flags</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each this.people}}
        <tr>
            {{!-- <td>{{id}}</td> --}}
            <td>{{dataValues.first_name}}</td>
            <td>{{dataValues.last_name}}</td>
            <td>{{dataValues.nickname}}</td>
            <td><a href="mailto:{{dataValues.email}}">{{dataValues.email}}</a></td>
            <td>{{dataValues.department_id}}</td>
            <td>{{#if dataValues.disabled}}<span class="tag is-danger">Disabled</span>{{/if}}</td>
            <td><a class="button is-small" href="./view/{{dataValues.id}}">View</a> <a class="button is-small" href="./edit/{{dataValues.id}}">Edit</a> <a class="button is-small is-danger" href="./edit/{{dataValues.id}}"><i class="fas fa-trash"></i></a></td>
        </tr>
        {{/each}}
    </tbody>
</table>